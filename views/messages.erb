<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>

    <div class="header">My Messages</div>

    <div id="message-stream">
      <% @messages.each do |message| %>
        
      <div class="message">
        <div class="to">
          <h1>To: <%= message.to %> </h1>
        </div>
        <div class="from">
          <h1>From: <%= message.from %></h1>
        </div>
        <div class="content">
          <h1>Message: <%= message.content %></h1>
        </div>
        <div class="time">
          <h1>I forgot to add this table.</h1>
        </div>
      </div>
    <% end %>

    </div>
  </body>
</html>
